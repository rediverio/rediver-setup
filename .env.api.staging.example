# =============================================================================
# API Configuration - Staging
# =============================================================================
# Backend API service configuration
#
# Usage: Copy to .env.api.staging
#   cp .env.api.staging.example .env.api.staging
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DB_USER=rediver
DB_PASSWORD=change_this_password_staging
DB_NAME=rediver
DB_HOST=postgres
DB_PORT=5432
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# External port (for debugging from host)
DB_EXTERNAL_PORT=5432

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false

# External port (for debugging from host)
REDIS_EXTERNAL_PORT=6379

# -----------------------------------------------------------------------------
# Seed Data
# -----------------------------------------------------------------------------
SEED_TEST_DATA=true

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=rediver
APP_ENV=staging
APP_DEBUG=false
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_REQUEST_TIMEOUT=30s
GRPC_PORT=9090

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
AUTH_PROVIDER=local

# CRITICAL: Generate a secure secret (min 64 characters)
# Generate with: openssl rand -base64 48
AUTH_JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_48

AUTH_JWT_ISSUER=rediver-api
AUTH_ACCESS_TOKEN_DURATION=15m
AUTH_REFRESH_TOKEN_DURATION=168h
AUTH_SESSION_DURATION=720h

# Password policy
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_PASSWORD_REQUIRE_UPPERCASE=true
AUTH_PASSWORD_REQUIRE_LOWERCASE=true
AUTH_PASSWORD_REQUIRE_NUMBER=true
AUTH_PASSWORD_REQUIRE_SPECIAL=false

# Security
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=15m
AUTH_MAX_ACTIVE_SESSIONS=10

# Registration
AUTH_ALLOW_REGISTRATION=true
AUTH_REQUIRE_EMAIL_VERIFICATION=false

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# -----------------------------------------------------------------------------
# SMTP Email (Optional)
# -----------------------------------------------------------------------------
SMTP_ENABLED=false
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@rediver.io
# SMTP_FROM_NAME=Rediver
